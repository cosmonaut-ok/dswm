#!/bin/sh

if test -n "$1"; then
    echo "Syntax: dswm-session"
    echo
    echo "See the dswm-session(1) manpage for help."
  exit
fi

# Clean up after GDM
xprop -root -remove _NET_NUMBER_OF_DESKTOPS \
      -remove _NET_DESKTOP_NAMES \
      -remove _NET_CURRENT_DESKTOP 2> /dev/null

# Set up the environment
A="@configdir@/dswm/environment"
test -r $A && . $A
A="${XDG_CONFIG_HOME:-"$HOME/.config"}/dswm/environment"
test -r $A && . $A

# Run Openbox, and have it run the autostart stuff
exec @bindir@/dswm --startup "@libexecdir@/dswm-autostart DSWM" "$@"
